<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMinhasCompras.View.EditarProduto"
             Title="{Binding Nome}">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout>
            
            <Label Text="Nome:" />
            <Entry x:Name="txt_nome" Text="{Binding Nome}" />

            <Label Text="Quantidade:" />
            <Entry x:Name="txt_quantidade" Text="{Binding Quantidade}" />

            <Label Text="Preço:" />
            <Entry x:Name="txt_preco" Text="{Binding Preco}" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>